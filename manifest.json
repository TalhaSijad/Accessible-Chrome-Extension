{
  "manifest_version": 2,
  "name": "Accessibility Assistant",
  "description": "Designed for visually or hearing-impaired users.",
  "version": "1.0.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "jquery.min.js", 
      "cookie.min.js",
      "popup.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ 
        "jquery.min.js",
        "cookie.min.js", 
        "popup.js"
       ]
    }
  ]
}